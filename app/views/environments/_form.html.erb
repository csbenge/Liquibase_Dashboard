<%= form_for([@application, @environment], html: {class: "form-horizontal"}) do |f| %>

  <% if @environment.errors.any? %>
  <div id="errorExplanation" class="bs-callout bs-callout-danger">
    <h4><%= pluralize(@environment.errors.count, "error") %> prohibited this environment from being saved:</h4>
    <ul>
    <% @environment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div class="well">

  <div class="field form-group">
    <%= f.label :'Environment Name', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :'Description', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :application_id, class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= collection_select(:environment, :application_id, Application.all, :id, :name) %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit @environment.new_record? ? 'Create' : 'Update', :class => 'btn btn-success btn-xs' %>
      <%= link_to 'Cancel', environments_path, :class => 'c_textlink' %>
    </div>
  </div>
  </form>

</div> 
<% end %>
