<div class="panel panel-red">
  <div class="panel-heading">
    <i class="fa fa-list-alt fa-2x"></i><b> <big><big>Applications</big></big></b>
  </div>  
</div>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'Applications', applications_path %></li>
  <li><%= link_to 'Add Application', new_application_path %></li>
</ul>

<div class="table">

<table class="table table-striped table-bordered table-hover table-condensed ">
  <thead>
    <tr>
      <th class="col-md-3">Appliction Name</th>
      <th class="col-md-3">Description</th>
      <th class="col-md-4">Schemas</th>
      <th class="col-md-2"colspan="4" style="text-align:center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{application.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{application.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
            <%= link_to application.name, application, :class => 'c_textlink' %>
          </span>
        </td>
        <td><%= application.description %></td>
        <td><%= get_Application_Schemas_List(application.id) %></td>
        <td style="text-align:center;"><%= link_to 'Show', application, class: 'btn btn-success btn-xs' %></td>
        <td style="text-align:center;"><%= link_to 'Edit', edit_application_path(application), class: 'btn btn-success btn-xs' %></td>
        <td style="text-align:center;"><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


